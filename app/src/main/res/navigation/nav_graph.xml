<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listingsFragment">

    <fragment
        android:id="@+id/listingsFragment"
        android:name="is.hbv601g.motorsale.ListingsFragment"
        android:label="Bílar á skrá"
        tools:layout="@layout/fragment_listings">
        <action android:id="@+id/action_listingsFragment_to_loginFragment" app:destination="@id/loginFragment" />
        <action android:id="@+id/action_listingsFragment_to_userFragment" app:destination="@id/userFragment" />
        <action android:id="@+id/action_listingsFragment_to_singleListingFragment" app:destination="@id/singleListingFragment" />
        <action android:id="@+id/action_listingsFragment_to_favoritesFragment" app:destination="@id/favoritesFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="is.hbv601g.motorsale.LoginFragment"
        android:label="Innskráning"
        tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_registerFragment" app:destination="@id/registerFragment" />
        <action android:id="@+id/action_loginFragment_to_listingsFragment" app:destination="@id/listingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="is.hbv601g.motorsale.RegisterFragment"
        android:label="Nýskráning"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="is.hbv601g.motorsale.FavoritesFragment"
        android:label="Uppáhalds"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/userListingsFragment"
        android:name="is.hbv601g.motorsale.UserListingsFragment"
        android:label="Skráningar mínar"
        tools:layout="@layout/fragment_user_listings" />

    <fragment
        android:id="@+id/userFragment"
        android:name="is.hbv601g.motorsale.UserFragment"
        android:label="Notandi"
        tools:layout="@layout/fragment_user">
        <action android:id="@+id/action_userFragment_to_createListingFragment" app:destination="@id/createListingFragment" />
        <action android:id="@+id/action_userFragment_to_userListingsFragment" app:destination="@id/userListingsFragment" />
        <action android:id="@+id/action_userFragment_to_editUserFragment" app:destination="@id/editUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/createListingFragment"
        android:name="is.hbv601g.motorsale.CreateListingFragment"
        android:label="Ný skráning"
        tools:layout="@layout/fragment_create_listing" />

    <fragment
        android:id="@+id/singleListingFragment"
        android:name="is.hbv601g.motorsale.SingleListingFragment"
        android:label="Skráning" />

    <fragment
        android:id="@+id/editListingFragment"
        android:name="is.hbv601g.motorsale.EditListingFragment"
        android:label="Breyta skráningu"
        tools:layout="@layout/fragment_edit_listing">
        <argument
            android:name="listingId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/editUserFragment"
        android:name="is.hbv601g.motorsale.EditUserFragment"
        android:label="Breyta notanda"
        tools:layout="@layout/fragment_edit_user">
        <action android:id="@+id/action_editUserFragment_to_userFragment" app:destination="@id/userFragment" />
        <argument
            android:name="userId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
