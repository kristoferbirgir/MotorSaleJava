<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:paddingBottom="5dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivVehicleImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Horizontal Layout to split into two parts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Left side with vehicle info, takes most space -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Brand Model"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVehicleYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvVehiclePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="$20,000"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVehicleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="City, Postal Code"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">
                <ImageButton
                    android:id="@+id/deleteListingButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone"
                android:background="@null" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">
                <Button
                    android:id="@+id/editListingButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breyta"
                    android:visibility="gone"
                    android:backgroundTint="@color/button_dark_blue"
                    android:textColor="@android:color/white"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/viewListingButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skoða Bifreið"
                    android:backgroundTint="@color/button_dark_blue"
                    android:textColor="@android:color/white"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/favoriteButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_favorites"
                    android:backgroundTint="@color/button_dark_blue"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    android:stateListAnimator="@null"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
