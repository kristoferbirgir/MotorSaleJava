<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- User Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/userCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notendanafn: Loading..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sími: Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Netfang: Loading..."
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Edit Personal Info Button -->
    <Button
        android:id="@+id/editUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breyta Notendaupplýsingum"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/userCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/button_dark_blue"
        android:textColor="@color/button_text"
        android:stateListAnimator="@null"/>

    <!-- Create Listing Button -->
    <Button
        android:id="@+id/createListingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skrá Bifreið"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editUserButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/button_dark_blue"
        android:textColor="@color/button_text"
        android:stateListAnimator="@null"/>

    <!-- My Listings Button (Even Spacing Fix) -->
    <Button
        android:id="@+id/myListingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bifreiðar á Skrá"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/createListingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/button_dark_blue"
        android:textColor="@color/button_text"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>
